---
// src/components/formatted-date.astro

/**
 * @param {Date} date The date to format.
 * @param {string} local By default `en-us`
 */
interface Props {
	date: Date;
	locale?: string;
	className?: string;
}
const { date, locale = "en-us", className } = Astro.props;
---

<time datetime={date.toISOString()} class={className}>
	{
		date.toLocaleDateString(locale, {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
