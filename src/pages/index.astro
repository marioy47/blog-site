      <picture>
        <Image src={imgMarioBw} alt="Mario Yepes toon photo"/>
      </picture>

		</main>
</GlobalLayout>

<style>
  html {
    --surface-1: var(--indigo-10);
    --text-1: var(--gray-1);
    --link: var(--gray-0);
    --link-visited: var(--gray-2);
  }
  main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--size-6);
    min-height: 90vh;
    margin-inline: auto;
    place-items: center;
  }
  h1 {
    text-align: right;
    font-size: clamp(1.5rem, 2.5vw, 3.2rem);
    animation: var(--animation-slide-in-up) forwards;
  }
  h1 strong {
    display: block;
    font-size: 1.5em;
  }
  picture img {
    border-radius: 50%;
    max-width: 80%;
  }
</style>
